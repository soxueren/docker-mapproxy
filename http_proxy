
RUN echo http-proxy=10.22.0.29:8080 >>~.wgetrc &&\
    echo https-proxy=10.22.0.29:8080 >>~.wgetrc &&\
    echo ftp-proxy=10.22.0.29:8080 >>~.wgetrc && \
    echo http-proxy https-proxy ftp-proxy >>~.wgetrc

RUN echo export http_proxy=10.22.0.29:8080 >>~/.bashrc && \
    echo export https_proxy=10.22.0.29:8080 >>~/.bashrc && \
    echo export http_proxy https_proxy >>~/.bashrc && \
    echo http-proxy https-proxy ftp-proxy >>~/.bashrc
 
RUN echo export http_proxy=10.22.0.29:8080 >>/etc/profile && \
    echo export https_proxy=10.22.0.29:8080 >>/etc/profile && \
    echo export http_proxy https_proxy >>/etc/profile && \
    echo http-proxy https-proxy ftp-proxy >>/etc/profile
